<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="page-wrapper" style="height: auto;" >
                <div class="page-content--bge5" style="height: auto;">
                    <div class="container" style="height: auto;">
                        <div class="login-wrap">
                            <div class="login-content">
                                <div class="login-logo">
                                
                                    <img src="images/icon/logo-mini.png" alt="Cool Admin" /> <strong>MAO</strong></a>        
                                </div>
                                <div class="login-form" style="height: auto;">
                                    <form action="/technicien/add" method="POST" enctype="multipart/form-data">
                                        <input type="text" hidden required name="ID"  placeholder="New First name" value="{{ technicien.ID}}" class="form-control">
                                            <input type="text"  hidden  name="Image" value="{{ technicien.Image }}" >
                                            <input type="text"  hidden  name="edit" value="edit" >
                                        <div class="form-group">
                                            <label class=" form-control-label">FName</label>
                                            <input type="text" required name="FName"  placeholder="New First name" value="{{ technicien.FName}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">LName</label>
                                            <input type="text" required name="LName" placeholder="New Last name" value="{{ technicien.LName}}" class="form-control">
                                        </div>

                                        <div class="form-group">
                                            <label class=" form-control-label">Phone</label>
                                            <input type="text" required name="Phone" placeholder="New Phone"  value="{{ technicien.Phone}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Age</label>
                                            <input type="text"  required name="Age" placeholder="New Age" value="{{ technicien.Age}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Email</label>
                                            <input type="email" required name="Email" placeholder="New Email" value="{{ technicien.Email}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Address</label>
                                            <input type="text" required name="Address" placeholder="New Address" value="{{ technicien.Adress}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Work Hours</label>
                                            <input type="text" required name="workHours" placeholder="New Work Hours" value="{{ technicien.WorkHours}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Department</label>
                                            <select name="Department"required id="select"   class="form-control" >
                                                <option value="informatique" {{#if technicien.informatique}} selected {{/if}}>informatique</option>
                                                <option value="Mecanique" {{#if technicien.Mecanique}} selected {{/if}}>Mecanique</option>
                                                <option value="Industrielle" {{#if technicien.Industrielle}} selected {{/if}}>Industrielle</option>
                                            </select>
                                        </div>                                        
                                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">ADD</button>
                                
                                    </form>  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
             </div>

        </div>
    </div>        
</div>